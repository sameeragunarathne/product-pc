{{#with assets}}
<div class="well asset-well">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">
                {{>asset-thumbnail .}}
            </div>
            <div class="col-lg-10">
                <h1 class="asset-name" style="padding-left: 1cm">{{name}}</h1>
                <i class="fa fa-circle" style="padding-left: 1cm"></i> {{lifecycleState}}
                <div class="well-description padding-bottom-lg" style="padding-left: 1cm">{{tables.0.fields.createdtime.value}}</div>
            </div>
        </div>
    </div>
</div>
{{/with}}
{{> update_form .}}