<div class="form-group" xmlns="http://www.w3.org/1999/html">
    <div class="title">
        <div class="input-group">
            Details:
            <label id="processName"></label>_
            <label id="processVersion"></label>
        </div>
    </div>
    <div class="horizontal_line"></div>
    <div class="sidebar-wrapper" id="left-sidebar"
         style="width: 260px; left: 0px; height: 399.883px; padding-top: 20px;" data-side="left" data-width="100"
         data-fixed-offset-top="0" data-offset-top="80">
        <div id="content">
            <ul class="nav nav-stacked">
                <li id="textEditor"><a href="#" onclick="showTextEditor(this)">Describe process in
                    text<i id="textadded" class="" style="color: red;padding-left: 20px;"></i></a></li>
                <li id="bpmn"><a href="#" onclick="associateBPMN(this)">Associate BPMN
                    model<i id="bpmnadded" class="" style="color: red;padding-left: 20px;"></i></a></li>
                <li id="flowChart"><a href="#" onclick="associateFlowChart(this)">Associate Flow
                    Chart<i id="flowchartadded" class="" style="color: red;padding-left: 35px;"></i></a></li>
                <li id="doc"><a href="#" onclick="associateDocument(this)">Associate
                    Documents<i id="docadded" class="" style="color: red;padding-left: 30px;"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-success" id="updateBtn" value="Update"
                onclick="updateDetails(this)" style="margin-left:40px; position: absolute; bottom: 100px;">
            Update
        </button>

        <button class="btn btn-success" id="associationBtn" value="Associations"
                onclick="processAssociations(this)" style="margin-left: 130px; position: absolute; bottom: 100px;">
            Associations&nbsp;&nbsp;<span class="glyphicon glyphicon-circle-arrow-right"></span>
        </button>
    </div>
    <div class="vertical_line"></div>
    <div class="container">
        <div> {{> add_process_text .}}</div>
        <div> {{> add_bpmn .}}</div>
        <div> {{> add_doc .}}</div>
        <div> {{> add_flowchart .}}</div>
        <div> {{> processTextView .}}</div>
        <div> {{> bpmnView .}}</div>
        <div> {{> docView .}}</div>
    </div>
</div>